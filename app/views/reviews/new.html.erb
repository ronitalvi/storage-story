<h1>Reviews new</h1>


<%= simple_form_for([@booking, @review]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "description" }%>

    <%= f.input :stars,
                required: true,
                input_html: { autocomplete: "stars" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
