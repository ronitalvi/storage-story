<table class="table">
  <thead>
    <tr>
      <th scope="col">status</th>
      <th scope="col">storage</th>
      <th scope="col">date</th>
    </tr>
  </thead>
  <tbody>
    <% puts "My user ID=#{current_user.id}".green %>
    <% if @my_storages.size == 0 %>
      <tr class='table-row'>
        <td>Nothing rented yet</td>
      </tr>
    <% else %>
      <% @my_storages.each do |message| %>
        <tr class='table-row message-row' data-id='<%= message.id %>'>
          <th scope="row"><%= message.read ? '' : 'new' %></th>
          <td scope="row"><%= message.description %></td>
          <td scope="row"><%= message.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
